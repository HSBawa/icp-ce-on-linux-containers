## You can disable following services if they are not needed:
#   custom-metrics-adapter
#   image-security-enforcement
#   istio
#   metering
#   logging
#   monitoring
#   service-catalog
#   storage-minio
#   storage-glusterfs
#   vulnerability-advisor
#   node-problem-detector-draino
#   multicluster-hub: disabled
#   multicluster-endpoint: disabled

management_services:
  istio: disabled
  vulnerability-advisor: disabled
  storage-glusterfs: disabled
  storage-minio: disabled
  platform-security-netpols: disabled
  node-problem-detector-draino: disabled
  multicluster-hub: disabled
  multicluster-endpoint: disabled
  custom-metrics-adapter: enabled
  image-security-enforcement: enabled
  metering: enabled
  logging: enabled
  monitoring: enabled
  service-catalog: enabled

